<Alloy>
    <Window title="Alert Dialog">
        <Button title="Show Alert Dialog" onClick="showAlertDialog" />
        <AlertDialog id="alert" title="Logout" message="Do you really want to log-out?" onClick="alertDialogClicked">
            <ButtonNames>
                <ButtonName>Confirm</ButtonName>
                <ButtonName>Delete</ButtonName>
                <ButtonName>Cancel</ButtonName>
            </ButtonNames>
        </AlertDialog>
    </Window>
</Alloy>
